<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#001F3B"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="272dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="40%"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="100%"
            app:srcCompat="@drawable/azmon1" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="151dp"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView9"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="100%"
            app:srcCompat="@drawable/azmon2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#001F3B"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="0dp"
            android:weightSum="100"
            android:orientation="horizontal">



            <Button
                android:id="@+id/mmpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"
                android:onClick="jalil"
                android:text=" آزمون mmpi"
                android:textColor="#ffffff"
                android:textSize="16sp"

                />


            <Button
                android:id="@+id/anogram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="50"

                android:background="@drawable/button"
                android:onClick="anogram"
                android:text=" anogram آزمون"
                android:textColor="#ffffff"
                android:textSize="16sp"

                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="0dp"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dpress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"
                android:onClick="dpress"
                android:text="آزمون افسردگی"
                android:textColor="#ffffff"
                android:textSize="16sp"

                />


            <Button
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"
                android:onClick="jalil1"
                android:layout_weight="50"

                android:text="جواب آزمون های گرفته شده"
                android:textColor="#ffffff"
                android:textSize="16sp"

                />

        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>